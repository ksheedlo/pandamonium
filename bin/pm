#!/usr/bin/env node
'use strict';

var entities = require('../lib/entities'),
  checks = require('../lib/checks'),
  notificationPlans = require('../lib/notification-plans'),
  notifications = require('../lib/notifications'),
  _ = require('underscore');

function usage() {
  console.log('Usage: ' + process.argv.slice(0, 2).join(' ') + 
    ' TYPE COMMAND [OPTIONS]\n\n' +
    '\twhere TYPE can be one of: (entities|notifications|notification_plans)');
}

if (process.argv.length < 3) {
  usage();
  process.exit(1);
}

var submodules = [{
  module: entities,
  type: 'entities'
}, {
  module: checks,
  type: 'checks'
}, {
  module: notificationPlans,
  type: 'notification_plans'
}, {
  module: notifications,
  type: 'notifications'
}];

var module = _.findWhere(submodules, {type: process.argv[2]});
if (!module) {
  usage();
  process.exit(1);
}

module.module.runCommand(process.argv.slice(3), function (err) {
  if (err) {
    console.error('An error occurred:', err);
    process.exit(1);
  } else {
    process.exit(0);
  }
});
